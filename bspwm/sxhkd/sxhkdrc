#################################################################
# SUPER + FUNCTION KEYS
#################################################################

#Rofi Fullscreen
super + F11
    rofi -show run -fullscreen


#################################################################
# SUPER + ... KEYS
#################################################################

#Atom
super + e
    atom

#Browser
super + w
    brave

#Conky-toggle
super + c
    conky-toggle

#Htop
super + h
    urxvt 'htop task manager' -e htop

#arcolinux logout
super + x
    arcolinux-logout

#Rofi theme selector
super + r
    rofi-theme-selector

#rofi
super + d
	bash /home/notmehul/.config/rofi/launchers/launcher.sh


#Pavucontrol
super + v
    pavucontrol

#Pragha
super + m
    pragha

#Termite
super + Return
    urxvt

#Xkill
super + Escape
    xkill

#move desktops
super + {1-9,0}
    bspc desktop -f focused:'^{1-9,10}'

#wifi
super + n
    bash /home/notmehul/.config/rofi/applets/applets/network.sh




#################################################################
# SUPER + SHIFT KEYS
#################################################################

#File-Manager
super + shift + Return
	pcmanfm


#reload sxhkd:
super + shift + s
	pkill -USR1 -x sxhkd


